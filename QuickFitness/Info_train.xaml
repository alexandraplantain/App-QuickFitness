        <Rectangle HorizontalAlignment="Left" Height="31" Margin="992,549,0,0" Stroke="#FFCDCDCD" VerticalAlignment="Top" Width="31" StrokeThickness="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="1028,563,0,0" Text="неделя" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="NEXT ART                    " FontWeight="Bold" FontSize="19" Foreground="#FFCDCDCD"/>



    </Grid>
</Window>
